<%- include("./layouts/header.ejs") %>
<nav class="navbar-search">
  <form class="search-form" action="/user/formSearch" method="get">
    <input type="search" name="name" placeholder="Search" aria-label="Search">
    <button class="search-btn" type="submit"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960">
      <path
        d="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z"
      /></svg
  ></button>
  </form>
</nav>

<section class="grid-section section-card">
    <div class="title">
      <div class="color-box"></div>
      <p class="title-name">Here What You Search For</p>
    </div>
    <ul class="product-list-grid">
      <% products.forEach(product => { %>
        <li class="product-card-grid">
          <a href="/user/product/<%= product._id %>"
            ><% if (product.images&& product.images.length>0) { %>
            <img src="<%= product.images[0] %>" alt="image" />
            <% } else { %>
            <img src="/assets/default-image.avif" alt="image" />
            <% } %>
          </a>
          
          <div class="product-text">
            <p><%= product.name %></p>
            <div class="price-card">
              <p class="off-price">
                ₹<%= (product.price - (product.price * (product.offer / 100))).toFixed(0) %>
              </p>
              <p class="og-price">₹<%= product.price %></p>
            </div>
            <p class="rating"><%= product.rating %></p>
          </div>
        </li>
        <% }) %>
    </ul>
  </section>

<%- include("./layouts/footer.ejs") %>
